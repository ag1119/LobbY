<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.lobby.UploadPhoto"
    android:background="@color/white">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/cust_back2">

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>
       <EditText
           android:id="@+id/aboutPic"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/action_bar"
           android:paddingStart="10dp"
           android:hint="Write something about pic"
           android:textColorHint="@color/light_black"
           android:enabled="false"
           android:visibility="invisible"
           android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/aboutPic"
        android:layout_marginTop="1dp"
        android:src="@drawable/pictures_black"
        android:background="@drawable/cust_back2"/>
    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/photo"
        android:layout_marginBottom="10dp"
        android:text="Upload photo"
        android:textAllCaps="false"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimaryDark"/>
   </RelativeLayout>
</ScrollView>
